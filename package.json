{
  "name": "mop",
  "version": "0.16.0",
  "title": "Montage Optimizer",
  "description": "Optimizes Montage applications for production by minifying, to reduce file size, and creating bundles, to reduce the number of requests.",
  "keywords": [
    "montage",
    "optimization",
    "production"
  ],
  "main": "optimize.js",
  "scripts": {
    "test": "istanbul test jasmine-node -- spec && jshint optimize.js lib/",
    "integration": "mop-integration"
  },
  "dependencies": {
    "montage": ">=0.16.0",
    "mr": "~0.16.0",
    "collections": "~1.0.1",
    "bluebird": "~3.0.5",
    "q-io": "~1.11.0",
    "url2": "~1.0.1",
    "semver": "~1.1.4",
    "uglify-js": "~2.4.19",
    "optimist": "~0.5.0",
    "csso": "~1.3.7",
    "html-minifier": "~0.5.2",
    "minidom": "~1.0.0"
  },
  "devDependencies": {
    "jasmine-node": "~1.5.0",
    "sandboxed-module": "~0.1.4",
    "istanbul": "~0.1.34",
    "jshint": "~2.1.4",
    "mop-integration": "git://github.com/montagejs/mop-integration.git#master"
  },
  "exclude": [
    "builds"
  ],
  "bin": {
    "mop": "optimize.js"
  },
  "preferGlobal": true
}
